package tema1;
import java.io.*;

public class Ejercicio1 {
	public static void main(String[] args) {
		String dir = args[0];
		File f = new File(dir);
		if(f.isDirectory()) {
			File[] list = f.listFiles();
			for(int i = 0; i < list.length; i++) {
				System.out.printf("Nombre: [%s], ¿Es fichero?: [%b], ¿Es directorio?: [%b] %n", list[i].getName(), list[i].isFile(), list[i].isDirectory());
			}
		}else {
			System.out.println("El valor introducido no es un directorio");
		}

		
	}
}
